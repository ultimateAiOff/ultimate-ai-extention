{
  "manifest_version": 3,
  "name": "Ultimate AI Extension",
  "version": "1.0",
  "description": "Extension Chrome pour bloquer les chatbots IA et accéder à Ultimate AI.",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}